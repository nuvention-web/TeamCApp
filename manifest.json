{
  "manifest_version": 2,
  "name":    "Collective",
  "version": "1.0",
  "offline_enabled": true,

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },

  "icons": { 
    "128": "/img/favicon.png" 
  },

  "browser_action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [{
    "matches":    ["<all_urls>"],
    "js":         ["content.js"],
    "run_at":     "document_idle",
    "all_frames": false
  }]

 
}


