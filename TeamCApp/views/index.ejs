    <div style="height:100px;"></div>

<!-- Get Diagnosis Based on Symptoms -->
      <div class="container">
      <div class="panel panel-default" ng-show="loginbefore">
            <div class="panel-heading">
                Please Login
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="username">Username</label>
                            <input type="text" class="form-control" ng-model="username" placeholder="Username">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" ng-model="password" placeholder="Password">
                        </div>
                        <button type="submit" ng-click="getToken()">Login</button>
                    </div>
                </div>
            </div>
        </div>
        <h4 class="page-header" ng-hide="loginbefore" > Please follow the instructions to check your symptoms. </h4>

            <!-- BODY LOCATION -->
          <div class="panel panel-info" ng-hide="loginbefore">
            <div class="panel-heading">
                <button ng-click="loadBodyLocations()" style="margin-right: 10px">
                    List Body Parts
                </button>
            </div>
            <div class="panel-body">
              <p ng-show="bodyLocations != ''">Please select the body location that is bothering you.</p>
              <div class="row">

                <!-- SHOW BODY PARTS -->
                <div class="col-md-4">
                  <div ng-show="bodyLocations != ''">
                    <div ng-repeat="bodyPart in bodyParts">
                      <input type="checkbox" checklist-model="partList.bodyParts" checklist-value="bodyPart.ID"> {{bodyPart.Name}}
                    </div>
                  </div>
                </div>

                <!--  SHOW SUB BODY PARTS -->
                <div class="col-md-4">
                  <div ng-show="bodyLocations != ''">
                    <div ng-repeat="subbodyPart in subbodyParts">
                      <input type="checkbox" checklist-model="partList.subbodyParts" checklist-value="subbodyPart.ID"> {{subbodyPart.Name}}
                    </div>
                  </div>
                </div>
                    
                <!--  SHOW SYMPTOMS -->
                <div class="col-md-4">
                  <div ng-show="bodySublocationSymptoms != ''">
                    <div ng-repeat="subPartSymptom in subPartSymptoms">
                      <input type="checkbox" checklist-model="partList.subPartSymptoms" checklist-value="subPartSymptom.ID"> {{subPartSymptom.Name}}
                    </div>
                  </div>
                </div>
              </div>

              <!-- SHOW POSSIBLE CONDITIONS -->
              <div class="row">
                <div class="col-md-4">
                  <div class="diagnosis-result" ng-show="diagnosis != ''">
                    <h4>Possible conditions</h4>
                    <div ng-repeat="condition in symptomList | orderBy: '-Accuracy'">
                      {{condition.Name}}
                    </div>
                  </div>
                </div>
              </div>
              <button ng-show="locationListed" ng-click="continue()" style="margin-right: 30px">Continue</button>
              <div class="alert alert-danger" ng-show="bodyLocationsError != ''">
                  <pre class="data">{{bodyLocationsError | json}}</pre>
              </div>
            </div>
          </div>
       </div>
    </script>
