    <!-- Talking points -->
    <script type="text/ng-template" id="/talking.html">
    <div style="height:100px;"></div>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">
            <img alt="Brand" src="/images/logo.png" height="20">
          </a>
       </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li ng-class="{ active: isActive('/')}"><a href="/">Home</a></li>
            <li ng-class="{ active: isActive('#profile')}"><a href="#/profile">Profile</a></li>
            <li ng-class="{ active: isActive('#lookup')}"><a href="#/lookup">Check Symptoms</a></li>
            <li ng-class="{ active: isActive('#notes')}"><a href="#/notes">Notes</a></li>
          </ul>
        </div>
      </div>
    </nav>
    <div class='talking page'>
      <div class="page-header">
        <h1>Talking points</h1>
      </div>
      <div class='lists'>
        <!-- Incomplete points -->
        <ol>
          <div ng-repeat="point in points | orderBy: '-priority'">
            <li>
              {{point.title}} [Priority {{point.priority}}]
              <span ng-click="incrementPriority(point)">+</span>
              <span ng-click="decrementPriority(point)">-</span>
              <span ng-click="completedPoint(point)">Complete</span>
            </li>
          </div>
        </ol>
        <!-- Completed points -->
        <ul>
          <div ng-repeat="point in completed">
            <li>
              <span ng-click="undoComplete(point)">(Undo)</span>
              {{point.title}} [Priority {{point.priority}}]
            </li>
          </div>
        </ul>
      </div>
      <h2>Add point</h2>
      <form ng-submit="addPoint()">
        <input type="text" placeholder="Title" ng-model="title"></input>
        <br>
        <button type="submit">Add</button>
      </form>
    </div>
    </script>


    <!-- Manage your doctor's visit -->
    <script type="text/ng-template" id="/notes.html">
    <div style="height:100px;"></div>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">
            <img alt="Brand" src="/images/logo.png" height="20">
          </a>
       </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li ng-class="{ active: isActive('/')}"><a href="/">Home</a></li>
            <li ng-class="{ active: isActive('#profile')}"><a href="#/profile">Profile</a></li>
            <li ng-class="{ active: isActive('#lookup')}"><a href="#/lookup">Check Symptoms</a></li>
            <li ng-class="{ active: isActive('#notes')}" class='active'><a href="#/notes">Notes</a></li>
          </ul>
        </div>
      </div>
    </nav>
    
    <div class='col-md-1 visit-gap'></div>
    <div class='visit-page col-md-10'>

      <!-- <div class='col-md-1 visit-gap'></div> -->

      <!-- Display date tabs -->
      <div class='col-md-3 visit-date-section'>
        <div class='visit-date'>
          <h4>July 23, 2016</h4>
        </div>
        <div class='visit-date'>
          <h4>October 1, 2016</h4>
        </div>  
        <div class='visit-date selected'>
          <h4>February 27, 2017</h4>
        </div>  
        <div class='visit-date'>
          <h4>April 31, 2017</h4>
        </div>  
      </div>

      <div class='col-md-9 visit-inner-page'>
      <!-- Ask your doctor about -->
        <div class='col-md-6 visit-question-section'>
          <h3>Ask your doctor about:</h3>
          <p>
            What are other signs of hypersensitivity I should look out for?
            <span class='delete'><i class="fa fa-times-circle-o" aria-hidden="true"></i></span>
          </p>
          <p>
            What are common environmental triggers?
            <span class='delete'><i class="fa fa-times-circle-o" aria-hidden="true"></i></span>
          </p>
          <p>
            Are there any home rememdies to alleviate my reactions?
            <span class='delete'><i class="fa fa-times-circle-o" aria-hidden="true"></i></span>
          </p>
          <div ng-repeat="question in questions">
            <p>
              {{question.title}}
              <span class='delete' ng-click="deleteQuestion(question)"><i class="fa fa-times-circle-o" aria-hidden="true"></i></span>
            </p><!-- <span ng-click="deleteQuestion(question)">Delete</span> -->
          </div>
          <div class='display-form'>
            <div class="visit-options" ng-click="displayForm()" ng-show="!form">
              <p><i class="fa fa-plus-circle" aria-hidden="true"></i>Add a question</p>
            </div>
          </div>
          <div class='question-form' ng-show="form">
            <form ng-submit="addQuestion()">
              <input type="text" placeholder="Enter your question" ng-model="title"></input>
              <br>
              <button type="submit" ng-click="displayForm()">Add</button>
            </form>
          </div>
        </div>

        <!-- Notes from the visit -->
        <div class='col-md-6 visit-notes-section'>
          <h3>Notes from the visit:</h3>
          <div class='visit-options'>
            <p><i class="fa fa-plus" aria-hidden="true"></i>Start taking notes</p>
          </div>
          <div class='visit-options'>
            <p><i class="fa fa-microphone" aria-hidden="true"></i> Record voice memo</p>
          </div>
